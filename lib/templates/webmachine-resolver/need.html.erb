<% if need.resolved %>
  <p>The file for <%= need.path %> has already been found.</p>
<% else %>
  <p>A file is still needed for <%= need.path %></p>
  <form action="<%= url_for(Need, "*" => need.path) %>" method="post" enctype='multipart/form-data'>
    <input type='file' name="data"></input>
    <button type="submit" class="button" value="" name="" >
      Submit
    </button>
  </form>
<% end %>
